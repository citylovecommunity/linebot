{
    "type": "bubble",
    "hero": {
        "type": "image",
        "url": "https://storage.googleapis.com/citylove_images/Bubble/hero/envelope-min.png",
        "size": "full",
        "aspectRatio": "20:13",
        "aspectMode": "cover"
    },
    "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "text",
                "text": "##標題##",
                "weight": "bold",
                "size": "xl",
                "align": "start",
                "margin": "none"
            },
            {
                "type": "box",
                "layout": "vertical",
                "contents": [
                    {
                        "type": "text",
                        "text": "##message##",
                        "wrap": true
                    }
                ],
                "margin": "lg"
            },
            {
                "type": "box",
                "layout": "vertical",
                "margin": "lg",
                "spacing": "sm",
                "contents": [
                    {
                        "type": "box",
                        "layout": "baseline",
                        "spacing": "sm",
                        "contents": [
                            {
                                "type": "text",
                                "text": "代表城市",
                                "color": "#aaaaaa",
                                "size": "sm",
                                "flex": 2
                            },
                            {
                                "type": "text",
                                "text": "##城市##",
                                "wrap": true,
                                "color": "#666666",
                                "size": "sm",
                                "flex": 5
                            }
                        ]
                    },
                    {
                        "type": "box",
                        "layout": "baseline",
                        "spacing": "sm",
                        "contents": [
                            {
                                "type": "text",
                                "text": "對象",
                                "color": "#aaaaaa",
                                "size": "sm",
                                "flex": 2
                            },
                            {
                                "type": "text",
                                "text": "##對象##",
                                "wrap": true,
                                "color": "#666666",
                                "size": "sm",
                                "flex": 5
                            }
                        ]
                    }
                ]
            },
            {
                "type": "separator",
                "margin": "lg"
            }
        ]
    },
    "footer": {
        "type": "box",
        "layout": "vertical",
        "spacing": "sm",
        "contents": [
            {
                "type": "button",
                "action": {
                    "type": "uri",
                    "label": "介紹卡連結",
                    "uri": "http://intro_url"
                },
                "style": "primary",
                "color": "#fc8403",
                "height": "md"
            },
            {
                "type": "button",
                "style": "link",
                "height": "md",
                "action": {
                    "type": "uri",
                    "label": "開啟邀請卡",
                    "uri": "http://form_app_url"
                },
                "color": "#f05c08"
            },
            {
                "type": "box",
                "layout": "vertical",
                "contents": [],
                "margin": "sm"
            }
        ],
        "flex": 0
